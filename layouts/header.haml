- unless @item.path == '/'
  %header
    %hgroup
      - title = @item[:header] || @item[:title]
      %h1.title #{title}
      -if @item[:kind] == 'article'
        %h3.post_date
          Posted
          = @item.timeago_time
          by 
          %a{:href => "http://ecarmi.org/"}
            Evan Carmi
    /
      %p
        %nav.breadcrumbs
          %ul
            - breadcrumbs_trail.each do |crumb|
              %li
                =link_to(crumb.path.split('/').last || 'ecarmi.org', crumb)

