%section#articles
  - sorted_articles.each do |item|
    %article
      %div.main
        %h2.title= link_to item[:title], item

        %p.summary= item[:summary]

      %div.meta
        %ul
          - [{"Slug (URL): " => item[:slug]}, {"Markup Type: " => item[:markup]}, {"Created: " => item[:created_time]}, {"Updated: " => item[:updated_time]}].each do |key, value|
            %li
              %span.field
                =key
              %span.value
                =value
